= form_for @item_review do |f|
  - if @item_review.errors.any?
    #error_explanation
      %h2= "#{pluralize(@item_review.errors.count, "error")} prohibited this item_review from being saved:"
      %ul
        - @item_review.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :user
    = f.text_field :user
  .field
    = f.label :item
    = f.text_field :item
  .field
    = f.label :rating
    = f.number_field :rating
  .field
    = f.label :comment
    = f.text_field :comment
  .actions
    = f.submit 'Save'
