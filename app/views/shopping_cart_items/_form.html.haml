= form_for @shopping_cart_item do |f|
  - if @shopping_cart_item.errors.any?
    #error_explanation
      %h2= "#{pluralize(@shopping_cart_item.errors.count, "error")} prohibited this shopping_cart_item from being saved:"
      %ul
        - @shopping_cart_item.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :IsRecurring
    = f.check_box :IsRecurring
  .field
    = f.label :Interval
    = f.number_field :Interval
  .field
    = f.label :quantity
    = f.number_field :quantity
  .field
    = f.label :item
    = f.text_field :item
  .field
    = f.label :user
    = f.text_field :user
  .actions
    = f.submit 'Save'
