= form_for @redeem_point do |f|
  - if @redeem_point.errors.any?
    #error_explanation
      %h2= "#{pluralize(@redeem_point.errors.count, "error")} prohibited this redeem_point from being saved:"
      %ul
        - @redeem_point.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :net_worth
    = f.number_field :net_worth
  .field
    = f.label :last_net_worth
    = f.number_field :last_net_worth
  .field
    = f.label :last_reward_type
    = f.text_field :last_reward_type
  .field
    = f.label :last_reward_worth
    = f.number_field :last_reward_worth
  .field
    = f.label :last_reward_update
    = f.datetime_select :last_reward_update
  .field
    = f.label :last_net_update
    = f.datetime_select :last_net_update
  .field
    = f.label :user
    = f.text_field :user
  .actions
    = f.submit 'Save'
