%div
  .row
    .col-md-12.col-sm-12.col-xs-12
      .x_panel
        .x_title
          %h2= @trainer.name
          .clearfix
        .x_content
          .col-md-3.col-sm-3.col-xs-12.profile_left
            .profile_img
              #crop-avatar
                = image_tag(@trainer.picture.medium.url, class: 'img-responsive avatar-view', title: @trainer.name) if @trainer.picture.present?

            %ul.list-unstyled.user_data
              %li
                %i.fa.fa-briefcase.user-profile-icon
                = @trainer.specializations.pluck(:name).join("\n")
              %li
                %i.fa.fa-phone.user-profile-icon
                = @trainer.mobile_number
              %li
                %i.fa.fa-envelope.user-profile-icon
                = @trainer.email

            =link_to edit_admin_panel_trainer_path(@trainer), class: 'btn btn-warning' do
              %i.fa.fa-edit.m-right-xs
              Edit trainer
            %br

          .col-md-9.col-sm-9.col-xs-12
            -if @trainer.location&.longitude && @trainer.location&.latitude 
              %div{ style: 'width: 100%; height: 300px; position: relative;' }
                %img{ src: generate_static_map_url(@trainer.location), style: 'max-widrth: 100%; display: block; margin: 0 auto;'}
            .profile_title
              .col-md-6.col-sm-6.col-xs-6
                %h2 Total count of qualifications #{@trainer.qualifications.size}
            %table.table
              %thead
                %tr
                  %th #
                  %th Diploma
                  %th University
              %tbody
                - @trainer.qualifications.each do |q|
                  %tr
                    %th{ scope: 'row' } #{q.id}
                    %td #{q.diploma}
                    %td #{q.university}
