.nested-fields
  - if f.object._destroy
    = f.hidden_field :_destroy
  - else
  .x_content
    .col-md-7.col-3
      = f.select :item, options_from_collection_for_select(Item.all, :id, :name), {},
                 { class: 'form-control select2 additional_parameter' }``

    .col-md-3.col-3
      = f.text_field :Quantity, class: 'form-control', placeholder: 'Quantity'

    .col-md-2.col-3
      = link_to_remove_association f, class: 'btn btn-danger full-width' do
        = '-'
        %span.fa.fa-plane{"aria-hidden" => "true"}

    .ln_solid
