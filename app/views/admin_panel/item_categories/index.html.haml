- content_for :head do
  %meta{name: "turbolinks-cache-control", content:"no-cache"}
%div
  .page-title
    .title_left
      %h3 Item Categories
    .title_right
      = link_to 'Add New', new_admin_panel_item_category_path, class: 'btn btn-info btn-round pull-right'


  .clearfix

  .row
    .col-md-12.col-sm-12.col-xs-12
      .x_panel
        .x_content
          %table.table.datatable.itemcategories
            %thead
              %tr
                %th{style: 'width:30px'}  #
                %th Name
                %th Picture
                %th Have Brands
                %th Actions
              %tr
                %th{style: 'width:30px'}
                  = text_field_tag :id, '', class: 'form-control', style: 'width:100%'
                %th
                  = text_field_tag :name, '', class: 'form-control', style: 'width:100%'
                %th
                %th
                %th
            %tbody
