= form_tag(send_reply_admin_panel_contact_request_path(@contact_request), 
  method: :post, class: 'form-horizontal form-label-left', autocomplete: 'off', remote: true) do

  .form-group
    = label_tag :message, 'Message', class: 'control-label col-md-3 col-sm-3 col-xs-12'
    .col-md-9.col-sm-9.col-xs-12
      = text_area_tag :message, '', rows: 5, class: 'form-control no-resize', required: true
  .ln_solid
  .row
    = submit_tag 'Send reply', class: 'btn btn-success center-block', style: 'margin:auto'
