%div
  .page-title
    .title_left
      %h3 New Post

  .clearfix

  = form_for @post, url: admin_panel_posts_path,
  html: { multipart: true, method: :post, class: 'form-horizontal form-label-left', autocomplete: 'off'} do |f|

    = render partial: 'new_form', locals: { f: f }

    = f.submit 'Create post', class: 'btn btn-success pull-right'
