.row
  .col-md-12.col-sm-12.col-xs-12
    .x_panel
      .x_title
        %h2 Change password
        .clearfix
      .x_content
        %br
        = form_for @admin, url: admin_panel_password_path,
        html: { method: :put, class: 'form-horizontal form-label-left', autocomplete: 'off'} do |f|
          .form-group
            = label_tag :current_password, 'Current password', class: 'control-label col-md-3 col-sm-3 col-xs-12'
            .col-md-6.col-sm-6.col-xs-12
              = password_field_tag :current_password, nil, class: 'form-control col-md-7 col-xs-12', required: true
          .form-group
            = f.label :password, 'New password', class: 'control-label col-md-3 col-sm-3 col-xs-12'
            .col-md-6.col-sm-6.col-xs-12
              = f.password_field :password, class: 'form-control col-md-7 col-xs-12', required: true
          .form-group
            = f.label :password_confirmation, class: 'control-label col-md-3 col-sm-3 col-xs-12'
            .col-md-6.col-sm-6.col-xs-12
              = f.password_field :password_confirmation, class: 'form-control col-md-7 col-xs-12', required: true
          .ln_solid
          .form-group
            .col-md-9.col-sm-9.col-xs-12.col-md-offset-3
              = f.submit 'Save changes', class: 'btn btn-success'
