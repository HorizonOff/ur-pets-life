- content_for :head do
  %meta{name: "turbolinks-cache-control", content:"no-cache"}
%div
  .page-title
    .title_left
      %h3 Ads
    .title_right
      = link_to 'Create ad', new_admin_panel_ad_path, class: 'btn btn-info btn-round pull-right'

  .clearfix

  .row
    .col-md-12.col-sm-12.col-xs-12
      .x_panel
        .x_content
          %table.table.datatable.ads
            %thead
              %tr
                %th{style: 'width:30px'} #
                %th Name
                %th Image
                %th View count
                %th Status
                %th Actions
              %tr
                %th{style: 'width:30px'}
                  = text_field_tag :id, '', class: 'form-control', style: 'width:100%'
                %th
                  = text_field_tag :name, '', class: 'form-control', style: 'width:100%'
                %th
                %th
                %th
                  = select_tag :is_active, options_for_select([[], ['Active', true], ['Inactive', false]]),  class: 'form-control select2'
                %th
            %tbody
