.col-md-6.col-sm-6.col-xs-12
  .x_panel
    .x_title
      %h2 Main Info
      .clearfix
    .x_content
      %br
      
      .form-group
        = f.label :first_name, class: 'control-label col-md-3 col-sm-3 col-xs-12' do
          Name
          %span.required *
        .col-md-9.col-sm-9.col-xs-12
          = f.text_field :first_name, class: 'form-control', required: true
      .form-group
        = f.label :last_name, class: 'control-label col-md-3 col-sm-3 col-xs-12' do
          Email
          %span.required *
        .col-md-9.col-sm-9.col-xs-12
          = f.text_field :last_name, class: 'form-control', required: true
      .form-group
        = f.label :mobile_number, class: 'control-label col-md-3 col-sm-3 col-xs-12' do
          Phone
          %span.required *
        .col-md-9.col-sm-9.col-xs-12
          = f.text_field :mobile_number, class: 'form-control', required: true
