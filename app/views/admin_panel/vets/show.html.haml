%div
  .row
    .col-md-12.col-sm-12.col-xs-12
      .x_panel
        .x_title
          %h2= @vet.name
          .clearfix
        .x_content
          .col-md-3.col-sm-3.col-xs-12.profile_left
            .profile_img
              #crop-avatar
                = image_tag(@vet.avatar.medium.url, class: 'img-responsive avatar-view', title: @vet.name) if @vet.avatar.present?

            %ul.list-unstyled.user_data
              %li
                %i.fa.fa-plus-square.user-profile-icon
                = @vet.clinic.name
              %li
                %i.fa.fa-briefcase.user-profile-icon
                = @vet.specializations.pluck(:name).join("\n")
              %li
                %i.fa.fa-phone.user-profile-icon
                = @vet.mobile_number
              %li
                %i.fa.fa-envelope.user-profile-icon
                = @vet.email
              %li
                %i.fa.fa-paw.user-profile-icon
                = @vet.pet_types.pluck(:name).join(', ')
              %li
                Session: 
                = @vet.session_duration
                minutes
              %li
                Experience: 
                = @vet.experience

            =link_to edit_admin_panel_vet_path(@vet), class: 'btn btn-warning' do
              %i.fa.fa-edit.m-right-xs
              Edit vet
            %br

            =link_to admin_panel_vet_calendars_path(@vet), class: 'btn btn-info' do
              %i.fa.fa-edit.m-right-xs
              View calendar
            %br

          .col-md-9.col-sm-9.col-xs-12
            -if @vet.location&.longitude && @vet.location&.latitude 
              %div{ style: 'width: 100%; height: 300px; position: relative;' }
                %img{ src: generate_static_map_url(@vet.location), style: 'max-widrth: 100%; display: block; margin: 0 auto;'}
            .profile_title
              .col-md-6.col-sm-6.col-xs-6
                %h2 Total count of qualifications #{@vet.qualifications.size}
            %table.table
              %thead
                %tr
                  %th #
                  %th Diploma
                  %th University
              %tbody
                - @vet.qualifications.each do |q|
                  %tr
                    %th{ scope: 'row' } #{q.id}
                    %td #{q.diploma}
                    %td #{q.university}
