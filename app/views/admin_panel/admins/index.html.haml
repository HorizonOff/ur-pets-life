%div
  .page-title
    .title_left
      %h3 Admins 
    .title_right
      = link_to 'Invite admin', new_admin_invitation_path, class: 'btn btn-info btn-round pull-right'

  .clearfix

  .row
    .col-md-12.col-sm-12.col-xs-12
      .x_panel
        .x_content
          %table.table
            %thead
              %tr
                %th #
                %th Avatar
                %th Name
                %th Email
                %th Actions
            %tbody
              - @admins.each do |admin|
                %tr
                  %th{ scope: 'row' } #{admin.id}
                  %td
                    -if admin.avatar.present?
                      =image_tag(admin.avatar.thumb.url)
                  %td #{admin.name}
                  %td #{admin.email}
                  %td
                    sdsadsasasasas
