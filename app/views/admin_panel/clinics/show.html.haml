%div
  .row
    .col-md-12.col-sm-12.col-xs-12
      .x_panel
        .x_title
          %h2= @clinic.name
          .clearfix
        .x_content
          .col-md-3.col-sm-3.col-xs-12.profile_left
            .profile_img
              #crop-avatar
                = image_tag(@clinic.picture.medium.url, class: 'img-responsive avatar-view', title: @clinic.name) if @clinic.picture.present?

            %ul.list-unstyled.user_data
              %li
                %i.fa.fa-map-marker.user-profile-icon
                = @clinic.address
              %li
                %i.fa.fa-briefcase.user-profile-icon
                = @clinic.specializations.pluck(:name).join("\n")
              %li
                %i.fa.fa-phone.user-profile-icon
                = @clinic.mobile_number
              %li
                %i.fa.fa-envelope.user-profile-icon
                = @clinic.email
              %li.m-top-xs
                %i.fa.fa-external-link.user-profile-icon
                = @clinic.website
              %li
                %i.fa.fa-user.user-profile-icon
                Clininc's admin

            =link_to edit_admin_panel_clinic_path(@clinic), class: 'btn btn-warning' do
              %i.fa.fa-edit.m-right-xs
              Edit Clinic
            %br

          .col-md-9.col-sm-9.col-xs-12
            -if @clinic.location.longitude && @clinic.location.latitude 
              %div{ style: 'width: 100%; height: 300px; position: relative;' }
                %img{ src: generate_static_map_url(@clinic.location), style: 'max-widrth: 100%; display: block; margin: 0 auto;'}
            .profile_title
              .col-md-6.col-sm-6.col-xs-6
                %h2 Total count of vets #{@clinic.vets.size}
              .col-md-6.col-sm-6.col-xs-6
                =link_to 'Add a vet', add_vet_admin_panel_clinic_path(@clinic), class: 'btn btn-info pull-right'
            %table.table
              %thead
                %tr
                  %th #
                  %th Name
                  %th Avatar
                  %th Email
                  %th Phone
                  %th Experience
                  %th Status
                  %th Actions
              %tbody
                - @clinic.vets.each do |vet|
                  %tr
                    %th{ scope: 'row' } #{vet.id}
                    %td #{vet.name}
                    %td
                      -if vet.avatar.present?
                        =image_tag(vet.avatar.thumb.url)
                    %td #{vet.email}
                    %td #{vet.mobile_number}
                    %td #{vet.experience}
                    %td #{vet.is_active}
                    %td
                      =link_to 'Show', admin_panel_vet_path(vet), class: 'btn btn-info'
                      =link_to 'View calendar', admin_panel_vet_calendars_path(vet), class: 'btn btn-primary'
                      =link_to 'Edit', edit_admin_panel_vet_path(vet), class: 'btn btn-warning'
                      =link_to 'Delete', admin_panel_vet_path(vet), method: :delete, class: 'btn btn-danger'
