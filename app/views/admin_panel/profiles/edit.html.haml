.row
  .col-md-12.col-sm-12.col-xs-12
    .x_panel
      .x_title
        %h2 Edit profile
        .clearfix
      .x_content
        %br
        = form_for @admin, url: admin_panel_profile_path,
        html: { multipart: true, method: :put, class: 'form-horizontal form-label-left', autocomplete: 'off'} do |f|
          .form-group
            = f.label :avatar, class: 'control-label col-md-3 col-sm-3 col-xs-12'
            .col-md-6.col-sm-6.col-xs-12
              -if @admin.avatar.present?
                =image_tag @admin.avatar.medium.url, class: 'avatar-show', style: ' display:block;margin:auto'

              = f.file_field :avatar, class: 'form-control col-md-7 col-xs-12'
              = f.hidden_field :avatar_cache
          .form-group
            = f.label :name, class: 'control-label col-md-3 col-sm-3 col-xs-12'
            .col-md-6.col-sm-6.col-xs-12
              = f.text_field :name, class: 'form-control col-md-7 col-xs-12', required: true
          .form-group
            = f.label :email, class: 'control-label col-md-3 col-sm-3 col-xs-12'
            .col-md-6.col-sm-6.col-xs-12
              = f.email_field :email, class: 'form-control col-md-7 col-xs-12', required: true
          .ln_solid
          .form-group
            .col-md-9.col-sm-9.col-xs-12.col-md-offset-3
              = f.submit 'Save changes', class: 'btn btn-success'
