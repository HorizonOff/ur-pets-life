.col-md-6.col-sm-6.col-xs-12
  .x_panel
    .x_title
      %h2 Pictures
      .clearfix
    .x_content
      %br

      .form-group
        = f.label :attachments, class: 'control-label col-md-4 col-sm-3 col-xs-12' do
          Pictures (max 10)
        .col-md-8.col-sm-9.col-xs-12
          = f.file_field :attachments, multiple: true, accept: '.jpg,.jpeg,.bmp,.png'

      #pictures
      = f.fields_for :pictures do |picture|
        = render partial: 'admin_panel/pictures/fields', locals: { f: picture }


