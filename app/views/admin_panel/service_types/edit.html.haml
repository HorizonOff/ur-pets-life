%div
  .page-title
    .title_left
      %h3 Edit service for #{@service_type.serviceable_type} #{@service_type.serviceable.name}

  .clearfix
  
  = form_for @service_type, url: admin_panel_service_type_path(@service_type),
  html: { method: :put, class: 'form-horizontal form-label-left', autocomplete: 'off'} do |f|

    = render partial: 'admin_panel/service_types/form', locals: { f: f }
    
    = f.submit 'Update service', class: 'btn btn-success pull-right'
