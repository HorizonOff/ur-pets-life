= f.hidden_field :serviceable_type
= f.hidden_field :serviceable_id

.form-group
  = f.label :name, 'Title', class: 'control-label col-md-3 col-sm-3 col-xs-12'
  .col-md-6.col-sm-6.col-xs-12
    = f.text_field :name, class: 'form-control col-md-7 col-xs-12', required: true
.form-group
  = f.label :description, 'Description', class: 'control-label col-md-3 col-sm-3 col-xs-12'
  .col-md-9.col-sm-9.col-xs-12
    = f.text_area :description, rows: 5, class: 'form-control no-resize'

= f.fields_for :service_details do |sd|
  = render partial: 'admin_panel/service_types/service_detail', locals: { f: sd }

.ln_solid
.row
  = f.submit 'Save', class: 'btn btn-success center-block', style: 'margin:auto'
