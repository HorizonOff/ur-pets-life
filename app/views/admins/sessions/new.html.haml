%div
  .login_wrapper
    .form.login_form
      %section.login_content
        = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|

          %h1 Login Form
          %div
            = f.email_field :email, autofocus: true, class: 'form-control', placeholder: 'Email', required: true

          %div
            = f.password_field :password, autocomplete: 'off', class: 'form-control', placeholder: 'Password', required: true

          = f.check_box :remember_me
          = f.label :remember_me
          
          %div
            = f.submit "Log in", class: 'btn btn-default submit'
            = link_to "Forgot your password?", new_password_path(resource_name), class: 'reset_pass'
            %br

          .clearfix

          .separator
            %div
              %img{src: '/images/AppIcon.png', style: 'height:80px;border-radius:50%;display:inline'}
              %h1{style: 'display:inline'}
