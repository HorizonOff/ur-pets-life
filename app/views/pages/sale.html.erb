        <div class="b_width" id="sale_items_container">
            <% @sorted.each do |item| %>
                <div class="sale_item">
                    <div class="sale">
                        <p class="percent"><%= item.discount&.round.to_s %>%</p>
                        <p class="off">OFF</p>
                    </div>
                    <img src="<%= item.picture_url %>" alt="<%= item.name.truncate(40) %>">
                    <p class="weight"><%= item.unit %></p>
                    <p class="name"><%= item.name.truncate(55) %></p>
                    <p class="old_price">AED <%= item.unit_price %></p>
                    <p class="new_price">AED <%= item.price %></p>

                </div>
            <% end %>
        </div>
